<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Judul Aplikasi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi Suhu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Input Suhu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Suhu:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputSuhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan suhu"
            android:inputType="numberDecimal" />

        <!-- Spinner Input Satuan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Satuan Asal:"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spinnerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tombol Konversi -->
        <Button
            android:id="@+id/btnKonversi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi"
            android:textColor="@android:color/white"
            android:background="#6A1B9A"
            android:layout_marginTop="16dp" />

        <!-- Hasil Konversi -->
        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hasil Konversi:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
